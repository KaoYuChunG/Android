<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen"
    android:fontFamily="sans-serif-thin"
    tools:context=".Activity.PessoaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPessoa"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:theme="@style/toolbar_white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CirImagemPessoa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_people"
        android:layout_below="@id/toolbarPessoa"/>
    <TextView
        android:id="@+id/lbl_imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Rafaela "
        android:layout_below="@id/CirImagemPessoa"
        android:textSize="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@id/lbl_imagem"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/lbl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kao@email.com"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Saldo"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/lbl_saldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$700,00"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CPF"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/lbl_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="000.000.000-00"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Telefone"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/lbl_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(53)99908-2354"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Descrição"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/lbl_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor site amenenenenenennennenenne"
            android:textSize="20sp"/>
    </LinearLayout>


</RelativeLayout>