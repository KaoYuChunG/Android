<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    tools:context=".Activity.PayFaturaActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFaturaPay"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/toolbar_white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Pagar Fatura"
            android:textColor="@color/white"
            android:textSize="40sp"/>

        <EditText
            android:id="@+id/txtIdentificacao_fatura_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:hint = "Digite codigo"
            android:padding="15dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnCadastrar_fatura_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="PAGAR"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:background="@color/botao"/>
    </LinearLayout>

</LinearLayout>